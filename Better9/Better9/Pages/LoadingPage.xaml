<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Better9.Pages.LoadingPage"
             Title="LoadingPage">

    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Image x:Name="logoImage" Source="loadingpage.jpg" Aspect="AspectFill" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />

        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" BackgroundColor="Transparent" Margin="0,270,0,0">
            <!-- Placera ActivityIndicator 100 enheter under toppen -->
            <Label Text="Loading..." FontSize="18" HorizontalOptions="Center" Margin="10" TextColor="White" />
            <ActivityIndicator IsRunning="True" Color="White" />
        </StackLayout>
    </Grid>
</ContentPage>
